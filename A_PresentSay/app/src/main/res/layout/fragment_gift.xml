<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naruto.a_presentsay.fragment.GiftFragment"
    android:background="@color/colorPinkBackGround">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBackGround">
        <TextView
            android:id="@+id/gift_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gifttop"
            android:textSize="@dimen/gifttop_size"
            android:textColor="@color/colorGifttop"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/gift_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_item_share"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/gift_margin_ten"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/gift_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackGround">

    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/gift_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_height_zero"
        android:layout_weight="8">

    </android.support.v4.view.ViewPager>

</LinearLayout>
