<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naruto.a_presentsay.fragment.GiftOneInfoFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackGround"
            android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/gift_info_iv"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/gift_info_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大嘴宝"
        android:textColor="#281E1E"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/gift_info_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="为了大黄蜂上王者"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#FF2D47"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/gift_info_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999"
            android:textColor="#FF2D47"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/gift_info_heart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_post_favourite_gray"/>
        <TextView
            android:id="@+id/gift_info_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="#A09696"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

        <TextView
            android:id="@+id/gift_info_descroption_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="#A09696"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
        </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBackGround"
    android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">
            <View
                android:id="@+id/gift_one_rv_view"
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:background="#DDD8D8"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/gift_one_rv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精品攻略推荐"
                android:layout_toRightOf="@id/gift_one_rv_view"
                android:textSize="13sp"
                android:textColor="#A09696"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>
            <View
                android:id="@+id/gift_one_rv_view_two"
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:background="#DDD8D8"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/gift_one_rv_tv"/>


        </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gift_info_hor_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGround"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">
                <View
                    android:id="@+id/gift_one_bottom_rv_view"
                    android:layout_width="50dp"
                    android:layout_height="0.5dp"
                    android:background="#DDD8D8"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/gift_one_bottom_rv_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你可能也喜欢"
                    android:layout_toRightOf="@id/gift_one_bottom_rv_view"
                    android:textSize="13sp"
                    android:textColor="#A09696"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"/>
                <View
                    android:id="@+id/gift_one_bottom_rv_view_two"
                    android:layout_width="50dp"
                    android:layout_height="0.5dp"
                    android:background="#DDD8D8"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/gift_one_bottom_rv_tv"/>
            </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gift_info_ver_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
